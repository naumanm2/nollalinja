---
interface Props {
  heading?: string;
  body1?: string;
  body2?: string;
}

const { heading, body1, body2 } = Astro.props;
---

<div class="p-4 py-12 sm:p-12 md:p-16 xl:p-32 flex flex-row justify-center">
  <div class="max-w-[1248px]">
    <div
      class="text-[max(4vw,40px)] text-white font-condensed uppercase leading-[1.13]"
    >
      {heading}
    </div>
    <div class="flex flex-col lg:flex-row lg:gap-8">
      <div
        class="text-[max(1.3vw,16px)] font-sans text-white leading-tight pt-4 md:pt-8 max-w-screen-lg flex-1"
      >
        {body1}
      </div>
      <div
        class="text-[max(1.3vw,16px)] font-sans text-white leading-tight pt-4 md:pt-8 max-w-screen-lg flex-1"
      >
        {body2}
      </div>
    </div>
  </div>
</div>
